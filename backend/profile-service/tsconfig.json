{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "emitDecoratorMetadata": true,  // Required for TypeORM
      "experimentalDecorators": true  // Required for TypeORM
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "test", "**/*.spec.ts"]
}